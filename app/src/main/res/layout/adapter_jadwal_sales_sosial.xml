<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_default"
        android:paddingRight="@dimen/padding_default"
        android:layout_marginTop="@dimen/padding_default"
        android:layout_marginBottom="@dimen/padding_default"
        android:orientation="horizontal"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/padding_default"
            android:layout_marginBottom="@dimen/padding_default"
            android:layout_marginLeft="@dimen/padding_default"
            android:layout_marginRight="@dimen/padding_default"
            android:id="@+id/rl_left"
            android:background="@drawable/bg_button_green">

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rl_left"
            android:layout_marginTop="@dimen/padding_default"
            android:layout_marginBottom="@dimen/padding_default"
            android:layout_marginRight="@dimen/padding_default"
            android:elevation="3dp"
            app:cardCornerRadius="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:src="@mipmap/ic_add"
                    android:id="@+id/iv_add"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/padding_default"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toLeftOf="@id/iv_add"
                    android:layout_marginRight="@dimen/padding_default">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_small">

                        <ImageView
                            android:layout_width="@dimen/icon_size2"
                            android:layout_height="@dimen/icon_size2"
                            android:src="@drawable/ic_name"
                            android:scaleType="fitCenter"
                            android:id="@+id/iv_name"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/padding_default"
                            android:layout_marginRight="@dimen/padding_default"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/iv_name"
                            android:text="Name"
                            android:id="@+id/tv_item1"
                            android:textStyle="bold"
                            android:textColor="@color/color_black"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_small">

                        <ImageView
                            android:layout_width="@dimen/icon_size2"
                            android:layout_height="@dimen/icon_size2"
                            android:src="@drawable/ic_location"
                            android:scaleType="fitCenter"
                            android:id="@+id/iv_alamat"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/padding_default"
                            android:layout_marginRight="@dimen/padding_default"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/iv_alamat"
                            android:text="Alamat"
                            android:id="@+id/tv_item2"
                            android:textSize="@dimen/text_small"
                            android:textColor="@color/color_black"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_small"
                        android:layout_marginBottom="@dimen/padding_small"
                        >

                        <ImageView
                            android:layout_width="@dimen/icon_size2"
                            android:layout_height="@dimen/icon_size2"
                            android:src="@drawable/ic_kontak"
                            android:scaleType="fitCenter"
                            android:id="@+id/iv_kontak"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/padding_default"
                            android:layout_marginRight="@dimen/padding_default"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/iv_kontak"
                            android:text="Kontak"
                            android:id="@+id/tv_item3"
                            android:textSize="@dimen/text_small"
                            android:textColor="@color/color_black"/>
                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>