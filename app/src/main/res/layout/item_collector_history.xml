<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/padding_default"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp20"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_tambahan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tambahan Donatur"
            android:visibility="gone"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_tanggal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/color_black"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_tanggal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tanggal"
        android:gravity="right"
        android:textColor="@color/color_black"
        android:textSize="12sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.5">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Donatur"
                android:layout_marginTop="@dimen/padding_small"
                android:textColor="@color/color_black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp10"
                android:text="Waktu Donasi"
                android:visibility="gone"
                android:textColor="@color/color_black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_nama_donatur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black"
                android:textSize="16sp"
                android:gravity="left" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:visibility="gone"
                android:textColor="@color/color_black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_alamat_donatur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black"
                android:textSize="16sp"
                android:visibility="gone"
                android:layout_marginTop="@dimen/dp5"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kontak"
                android:visibility="gone"
                android:textColor="@color/color_black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_kontak_donatur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black"
                android:textSize="16sp"
                android:visibility="gone"
                android:layout_marginTop="@dimen/dp5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nominal"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="@color/color_black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_nominal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlue2"
                android:textSize="16sp"
                android:text="0"
                android:gravity="left"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jenis Donatur"
                android:textColor="@color/color_black"
                android:textSize="12sp"
                android:layout_marginTop="@dimen/_2sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_jenis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:text=""
                android:gravity="left"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/txt_waktu_donasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black"
                android:textSize="16sp"
                android:layout_marginTop="@dimen/dp5"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Donatur"
                android:textColor="@color/color_black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dp5" />

            <TextView
                android:visibility="gone"
                android:id="@+id/txt_jenis_donasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black"
                android:textSize="12sp"
                android:layout_marginTop="@dimen/dp5" />

            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jumlah Donasi"
                android:textColor="@color/color_black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/dp20"
                android:layout_marginEnd="@dimen/dp20"
                android:layout_marginTop="@dimen/dp5" />

            <TextView
                android:visibility="gone"
                android:id="@+id/txt_jumlah_donasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black"
                android:textSize="12sp"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginStart="@dimen/dp20"
                android:layout_marginEnd="@dimen/dp20" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="3.5"
            android:id="@+id/ll_print">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/printhijau"
                android:id="@+id/img_print"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="@dimen/padding_default"
        android:background="#ECECEC"/>

</LinearLayout>