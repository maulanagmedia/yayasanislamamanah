<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true"
        android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorWhite2"></solid>
            <corners android:radius="@dimen/default_corner"></corners>
            <stroke android:color="@color/colorGrey" android:width="@dimen/line_default"></stroke>
        </shape>
    </item>
    <item android:state_enabled="true"
        android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorWhite2"></solid>
            <corners android:radius="@dimen/default_corner"></corners>
            <stroke android:color="@color/colorGrey" android:width="@dimen/line_default"></stroke>
        </shape>
    </item>
    <item android:state_enabled="true"
        android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorWhite2"></solid>
            <corners android:radius="@dimen/default_corner"></corners>
            <stroke android:color="@color/colorGrey" android:width="@dimen/line_default"></stroke>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorWhite2"></solid>
            <corners android:radius="@dimen/default_corner"></corners>
            <stroke android:color="@color/colorGrey" android:width="@dimen/line_default"></stroke>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorWhite"></solid>
            <corners android:radius="@dimen/default_corner"></corners>
            <stroke android:color="@color/colorGrey" android:width="@dimen/line_default"></stroke>
        </shape>
    </item>
</selector>